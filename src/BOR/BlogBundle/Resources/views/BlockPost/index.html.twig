{% extends 'BORAdminBundle::layout.html.twig' %}
{% block content %}
    <h1>Blockpost list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Reason</th>
                <th>Iduser</th>
                <th>Idpost</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('bor_blockpost_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.reason }}</td>
                <td>{{ entity.user }}</td>
                <td>{{ entity.post }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('bor_blockpost_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('bor_blockpost_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                    <li>
                        <a href="{{ path('bor_admin_post_edit', { 'id': entity.post }) }}">Edit post</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <ul>
            <li>
                <a href="{{ path('bor_post_list') }}">
                    Back to the list
                </a>
            </li>
        </ul>
    {% endblock %}
