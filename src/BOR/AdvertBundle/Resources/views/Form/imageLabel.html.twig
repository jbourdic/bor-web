{% extends 'form_div_layout.html.twig' %}

{% block form_label %}
{% spaceless %}
    {% if not compound %}
        {% set label_attr = label_attr|merge({'for': id}) %}
    {% endif %}
    {% if required %}
        {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
    {% endif %}
    {% if label is empty %}
        {% set label = name|humanize %}
    {% endif %}

    <label class="search-result-img" {% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>
        <img src="{{ asset(label) }}" alt="{{ label }}">
    {% if attr.note is defined %}
        <span style="font: 11px normal; font-family: arial;">({{ attr.note }})
        </span>
    {% endif %}</label>
{% endspaceless %}
{% endblock form_label %}