{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Favorite</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Iduser</th>
                <td>{{ entity.idUser }}</td>
            </tr>
            <tr>
                <th>Idadvert</th>
                <td>{{ entity.idAdvert }}</td>
            </tr>
            <tr>
                <th>Createdon</th>
