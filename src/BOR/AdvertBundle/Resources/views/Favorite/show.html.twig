            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('favorite') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('favorite_edit', { 'id': entity.id }) }}">
