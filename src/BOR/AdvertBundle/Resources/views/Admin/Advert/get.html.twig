{% extends 'BORAdminBundle::layout.html.twig' %}
{% block content %}
    <h1>Advert admin</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Lodgmenttype</th>
                <td>{{ entity.lodgmentType }}</td>
            </tr>
            <tr>
                <th>Transacttype</th>
                <td>{{ entity.transactType }}</td>
            </tr>
            <tr>
                <th>Charges</th>
                <td>{{ entity.charges }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ entity.price }}</td>
            </tr>
            <tr>
                <th>Tax</th>
                <td>{{ entity.tax }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ entity.street }}</td>
            </tr>
            <tr>
                <th>Streetnumber</th>
                <td>{{ entity.streetNumber }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ entity.zipCode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ entity.city }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ entity.country }}</td>
            </tr>
            <tr>
                <th>Lat</th>
                <td>{{ entity.lat }}</td>
            </tr>
            <tr>
                <th>Lng</th>
                <td>{{ entity.lng }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ entity.active }}</td>
            </tr>
            <tr>
                <th>Createdon</th>
                <td>{{ entity.createdOn|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updatedon</th>
                <td>{{ entity.updatedOn|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('bor_admin_advert_list') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('bor_admin_advert_update', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
</ul>

    <a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u={{ app.request.getSchemeAndHttpHost() }}{{ url }}">Share on Facebook</a>
    <a target="_blank" href="https://twitter.com/intent/tweet?url={{ app.request.getSchemeAndHttpHost() }}{{ url }}&text=Texte_Du_tweet&via=CompteTwitter&hashtags=BOR,blablaAcademy">Share on Twitter</a>
    <a target="_blank" href="https://plus.google.com/share?url={{ app.request.getSchemeAndHttpHost() }}{{ url }}">Share on Google+</a>
{% endblock %}