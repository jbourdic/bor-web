{% trans_default_domain 'FOSUserBundle' %}


<div class="content">
    <div class="page-header mrgt-lg">
        <div class="cell">
            <h1 class="ttl-2 txt-upper">Créer mon compte</h1>
        </div>
    </div>
    <div class="content-box">
        <div class="page-ttl under">
            <h2 class="ttl-3 txt-upper txt-bold">Mes informations personnelles</h2>
        </div>
        {{ form_start(form) }}
        <div class="form-block clearfix mrgb-md">
            <div class="col-md-6">
                <div class="wrapper form-horizontal" style="">
                    {{ form_widget(form.isExpert) }}
                    <div class="form-group">
                        {{ form_label(form.civility, null, { 'label_attr': {'class':'control-label col-md-4'} }) }}
                        <div class="col-md-8">
                            {{ form_widget(form.civility, {'attr': {id:'civility',name:'_civility',class:'form-control form-md'}}) }}
                            {% if not form.civility.vars.valid %}<div class="alert alert-danger" role="alert">{{ form_errors(form.civility) }}</div>{% endif %}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.firstname, null, { 'label_attr': {'class':'control-label col-md-4'} }) }}
                        <div class="col-md-8">
                            {{ form_widget(form.firstname, {'attr': {id:'firstname',name:'_firstname',class:'form-control form-md'}}) }}
                            {% if not form.firstname.vars.valid %}<div class="alert alert-danger" role="alert">{{ form_errors(form.firstname) }}</div>{% endif %}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.lastname, null, { 'label_attr': {'class':'control-label col-md-4'} }) }}
                        <div class="col-md-8">
                            {{ form_widget(form.lastname, {'attr': {id:'lastname',name:'_lastname',class:'form-control form-md'}}) }}
                            {% if not form.lastname.vars.valid %}<div class="alert alert-danger" role="alert">{{ form_errors(form.lastname) }}</div>{% endif %}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.phone, null, { 'label_attr': {'class':'control-label col-md-4'} }) }}
                        <div class="col-md-8">
                            {{ form_widget(form.phone, {'attr': {id:'phone',name:'_phone',class:'form-control form-md'}}) }}
                            {% if not form.phone.vars.valid %}<div class="alert alert-danger" role="alert">{{ form_errors(form.phone) }}</div>{% endif %}
                        </div>
                    </div>

                    {% if form.job is defined %}
                    <div class="form-group">
                        {{ form_label(form.job, null, { 'label_attr': {'class':'control-label col-md-4'} }) }}
                        <div class="col-md-8">
                            {{ form_widget(form.job, {'attr': {id:'job',name:'_job',class:'form-control form-md'}}) }}
                            {% if not form.job.vars.valid %}<div class="alert alert-danger" role="alert">{{ form_errors(form.job) }}</div>{% endif %}
                        </div>
                    </div>
                    {% endif %}

                    {% if form.website is defined %}
                    <div class="form-group">
                        {{ form_label(form.website, null, { 'label_attr': {'class':'control-label col-md-4'} }) }}
                        <div class="col-md-8">
                            {{ form_widget(form.website, {'attr': {id:'website',name:'_website',class:'form-control form-md'}}) }}
                            {% if not form.website.vars.valid %}<div class="alert alert-danger" role="alert">{{ form_errors(form.website) }}</div>{% endif %}
                        </div>
                    </div>
                    {% endif %}

                    {% if form.presentationVideo is defined %}
                    <div class="form-group">
                        {{ form_label(form.presentationVideo, null, { 'label_attr': {'class':'control-label col-md-4'} }) }}
                        <div class="col-md-8">
                            {{ form_widget(form.presentationVideo, {'attr': {id:'presentationVideo',name:'_presentationVideo',class:'form-control form-md'}}) }}
                            {% if not form.presentationVideo.vars.valid %}<div class="alert alert-danger" role="alert">{{ form_errors(form.presentationVideo) }}</div>{% endif %}
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-6">
                <div class="wrapper form-horizontal mrgt-lg">
                    <div class="form-group">
                        {{ form_label(form.zipCode, null, { 'label_attr': {'class':'control-label col-md-4'} }) }}
                        <div class="col-md-8">
                            {{ form_widget(form.zipCode,{'attr':{id:'zipCode',name:'_zipCode',class:'form-control form-md'}}) }}
                            {% if not form.zipCode.vars.valid %}<div class="alert alert-danger" role="alert">{{ form_errors(form.zipCode) }}</div>{% endif %}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.email, null, { 'label_attr': {'class':'control-label col-md-4'} })  }}
                        <div class="col-md-8">
                            {{ form_widget(form.email,{'attr':{id:"email",name:"_email",class:"form-control form-md"} }) }}
                            {% if not form.email.vars.valid %}<div class="alert alert-danger" role="alert">{{ form_errors(form.email) }}</div>{% endif %}
                        </div>
                    </div>
                    {% for passwordField in form.plainPassword %}
                        <div class="form-group">
                            {{ form_label(passwordField, null, { 'label_attr': {'class':'control-label col-md-4'} }) }}
                            <div class="col-md-8">
                                {{ form_widget(passwordField, { 'attr': {'class': 'form-control form-md',id:"",'name':''} }) }}
                                {% if not passwordField.vars.valid %}<div class="alert alert-danger" role="alert">{{ form_errors(passwordField) }}</div>{% endif %}
                            </div>
                        </div>
                    {% endfor %}
                    {% if form.description is defined %}
                    <div class="form-group">
                        {{ form_label(form.description, null, { 'label_attr': {'class':'control-label col-md-4'} }) }}
                        <div class="col-md-8">
                            {{ form_widget(form.description,{'attr':{id:'isExpert',name:'_isExpert',class:'form-control form-md'}}) }}
                            {% if not form.description.vars.valid %}<div class="alert alert-danger" role="alert">{{ form_errors(form.description) }}</div>{% endif %}
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="clear mrgt-md page-ttl under">
            <h2 class="ttl-3 txt-upper txt-bold">Parrainage</h2>
        </div>
        <div class="form-block clearfix mrgb-md">
            <div class="col-md-6">
                <div class="form-horizontal">
                    <div class="form-group">
                        {{ form_label(form.sponsorEmail, null, { 'label_attr': {'class':'control-label col-md-4'} }) }}
                        <div class="col-md-8">
                            {{ form_widget(form.sponsorEmail, {'attr': {id:'sponsorEmail',name:'_sponsorEmail',class:'form-control'}}) }}
                            {{ form_errors(form.sponsorEmail) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <p class="mrgt-lg text-dark">En ouvrant un compte, vous acceptez d'ahérer à nos <a href="{{ url('bor_core_cgu') }}">Conditions générales d'utilisation</a></p>
                <input class="btn btn-default" type="submit" value="{{ 'registration.submit'|trans }}"/>
            </div>
        </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
</div>
