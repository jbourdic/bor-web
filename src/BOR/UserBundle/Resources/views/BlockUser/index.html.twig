{% extends 'BORAdminBundle::layout.html.twig' %}
{% block content %}
    <h1>BlockUser list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Reason</th>
                <th>User</th>
                <th>User Blocked</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('bor_blockuser_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.reason }}</td>
                <td>{{ entity.user }}</td>
                <td>{{ entity.userBlocked }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('bor_blockuser_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('bor_blockuser_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                    <li>
                        <a href="{{ path('bor_admin_user_edit', { 'id': entity.userBlocked.id }) }}">edit User</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
