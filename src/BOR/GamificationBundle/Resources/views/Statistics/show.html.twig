{% extends 'BORAdminBundle::layout.html.twig' %}

{% block content %}
    <h1>Statistics</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ entity.level }}</td>
            </tr>
            <tr>
                <th>Experience</th>
                <td>{{ entity.experience }}</td>
            </tr>
            <tr>
                <th>Level Experience</th>
                <td>{{ entity.levelExperience }}</td>
            </tr>
            <tr>
                <th>Credit</th>
                <td>{{ entity.credit }}</td>
            </tr>
            <tr>
                <th>Qcm</th>
                <td>{{ entity.qcm }}</td>
            </tr>
            <tr>
                <th>Courses</th>
                <td>{{ entity.courses }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            Rang : {{ rank }} / {{ total }}
        </li>
        <li>
            <a href="{{ path('bor_rank') }}">
                Classement
            </a>
        </li>
        <li>
            <a href="{{ path('statistics_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
