{% extends 'BORAdminBundle::layout.html.twig' %}

{% block content %}
    <h1>Action</h1>

    <ul class="record_actions">
        <li>
            <a href="{{ path('bor_action_index') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('bor_action_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
    </ul>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Credit</th>
                <td>{{ entity.credit }}</td>
            </tr>
            <tr>
                <th>Creditmin</th>
                <td>{{ entity.creditMin }}</td>
            </tr>
            <tr>
                <th>Creditmax</th>
                <td>{{ entity.creditMax }}</td>
            </tr>
            <tr>
                <th>Experience</th>
                <td>{{ entity.experience }}</td>
            </tr>
            <tr>
                <th>Experiencemin</th>
                <td>{{ entity.experienceMin }}</td>
            </tr>
            <tr>
                <th>Experiencemax</th>
                <td>{{ entity.experienceMax }}</td>
            </tr>
            <tr>
                <th>Createdon</th>
                <td>{{ entity.createdOn|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updatedon</th>
                <td>{{ entity.updatedOn|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
