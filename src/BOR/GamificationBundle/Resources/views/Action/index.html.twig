{% extends 'BORAdminBundle::layout.html.twig' %}

{% block content %}
    <h1>Action list</h1>
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Credit</th>
                <th>Creditmin</th>
                <th>Creditmax</th>
                <th>Experience</th>
                <th>Experiencemin</th>
                <th>Experiencemax</th>
                <th>Createdon</th>
                <th>Updatedon</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('bor_action_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.credit }}</td>
                <td>{{ entity.creditMin }}</td>
                <td>{{ entity.creditMax }}</td>
                <td>{{ entity.experience }}</td>
                <td>{{ entity.experienceMin }}</td>
                <td>{{ entity.experienceMax }}</td>
                <td>{% if entity.createdOn %}{{ entity.createdOn|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedOn %}{{ entity.updatedOn|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('bor_action_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('bor_action_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
