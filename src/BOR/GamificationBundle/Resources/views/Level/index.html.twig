{% extends 'BORAdminBundle::layout.html.twig' %}

{% block content %}
    <h1>Level list</h1>

    <ul>
        <li>
            <a href="{{ path('bor_level_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Level</th>
                <th>Experiencemin</th>
                <th>Experiencemax</th>
                <th>Createdon</th>
                <th>Updatedon</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('bor_level_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.level }}</td>
                <td>{{ entity.experienceMin }}</td>
                <td>{{ entity.experienceMax }}</td>
                <td>{% if entity.createdOn %}{{ entity.createdOn|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedOn %}{{ entity.updatedOn|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('bor_level_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('bor_level_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
